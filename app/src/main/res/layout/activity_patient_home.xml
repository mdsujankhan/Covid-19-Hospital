<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doctor_home"
    tools:context=".DoctorRegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/patient_cover"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/title"
            android:text="Patient Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000"
            />

        <Button
            android:id="@+id/applyForCovidTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply_covid_19_test"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="@drawable/buttons_background"
            />

        <Button
            android:id="@+id/appointButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appoint a Doctor"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="@drawable/buttons_background"
            />

        <Button
            android:id="@+id/prescriptionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Prescription"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="@drawable/buttons_background"
            />

        <Button
            android:id="@+id/invoiceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Invoice"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="@drawable/buttons_background"
            />

        <Button
            android:id="@+id/reportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Covid-19 Report"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="@drawable/buttons_background"
            />

        <TextView
            android:id="@+id/backToHomePatient"
            android:text="Back To Home"
            android:layout_width="wrap_content"
            android:drawableStart="@drawable/ic_home"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000"
            />

    </LinearLayout>


</ScrollView>